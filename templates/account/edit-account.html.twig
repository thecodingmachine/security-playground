{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <div class="example-wrapper">
        {% for flashMessage in app.flashes('account') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <h1>Modifier mon profil</h1>
        <form action="{{ path('app_account_submit') }}" method="POST">
            <input type="hidden" class="form-control" id="id" value="{{ user.id }}">
            <div class="mb-3">
                <label for="email" class="form-label">Email *</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="Entrer votre email" required value="{{ user.email }}">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Prénom *</label>
                <input type="text" class="form-control" id="first_name" name="first_name" placeholder="Entrer votre prénom" required value="{{ user.firstName }}">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Nom *</label>
                <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Entrer votre nom" required value="{{ user.lastName }}">
            </div>
            <div class="text-end">
                <a class="btn btn-secondary" href="{{ path('app_home') }}">Cancel</a>
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </form>
    </div>
{% endblock %}
